<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/parent_id"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="409dp"
        android:layout_height="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_id"
                android:layout_width="75dp"
                android:layout_height="71dp"
                android:layout_marginStart="44dp"
                android:layout_marginLeft="44dp"
                android:src="@drawable/profile"
                app:layout_constraintBottom_toBottomOf="@+id/price_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.659" />

            <TextView
                android:id="@+id/name_id"
                android:layout_width="272dp"
                android:layout_height="71dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@+id/img_id"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/price_id"
                android:layout_width="286dp"
                android:layout_height="62dp"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/name_id"
                app:layout_constraintStart_toStartOf="@+id/name_id"
                app:layout_constraintTop_toBottomOf="@+id/name_id" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>